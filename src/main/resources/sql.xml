<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--  namespace 路径名字 -->
<mapper namespace="suibian">
    <!-- resultType  sql执行之后的返回结果
          #{id}   占位符 等价于 ?
    -->
    <select id="queryEmpById" resultType="com.cebbank.liuxiaoming.mybatis.entity.Employee">
	select  employId,last_name as lastName,email,gender from employee where employId = #{id}
	</select>

    <select id="queryAll" resultType="com.cebbank.liuxiaoming.mybatis.entity.Employee">
       select employId,last_name as lastName,email,gender from employee
    </select>

</mapper>